<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:sothree="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sliding_layout"
    android:gravity="bottom"
    sothree:umanoPanelHeight="68dp"
    sothree:umanoShadowHeight="4dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--Main Content-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:id="@+id/tabsToolbar"
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:background="@android:color/black"
            app:layout_scrollFlags="scroll|enterAlways"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            android:weightSum="1">

            <TextView
                android:text="RNNR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-thin"
                android:textColor="@android:color/holo_orange_dark"
                android:textSize="25sp"/>

        </android.support.v7.widget.Toolbar>

        <android.support.design.widget.TabLayout
            android:id="@+id/tabs"
            app:tabIndicatorColor="@android:color/holo_orange_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabMode="fixed"
            android:background="@android:color/black"
            app:tabGravity="fill" />

    </android.support.design.widget.AppBarLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"  />

    </RelativeLayout>

    <!--Sliding panel-->
    <RelativeLayout
        android:id="@+id/activity_workout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="#EEEEEE"
        tools:context="com.mr2.rnnr.Workout"
        android:padding="0dp">

        <Button
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/round_button"
            android:gravity="center_vertical|center_horizontal"
            android:text="@string/startworkout"
            android:textColor="@android:color/black"
            android:layout_marginTop="142dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <ProgressBar
            android:id="@+id/workoutProgress"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:indeterminate="false"
            android:progressDrawable="@drawable/circular"
            android:background="@drawable/background"
            style="?android:attr/progressBarStyleHorizontal"
            android:max="100"
            android:progress="65"
            android:layout_marginTop="117dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@android:color/white"
            android:theme="?attr/actionBarTheme"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar"
            android:backgroundTint="@android:color/holo_orange_dark">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1">

                <ImageView
                    android:layout_width="54dp"
                    android:layout_height="54dp"
                    app:srcCompat="@drawable/cast_album_art_placeholder"
                    android:id="@+id/artwork"
                    android:layout_gravity="center"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="8dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/title"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:height="25dp"
                        android:text="Title"
                        android:paddingLeft="10dp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:id="@+id/artist"
                        android:fontFamily="sans-serif-thin"
                        android:textSize="20sp"
                        android:textColor="@android:color/black"
                        android:layout_height="wrap_content"
                        android:height="25dp"
                        android:text="Artist"
                        android:paddingLeft="10dp"/>

                </LinearLayout>

            </android.support.v7.widget.Toolbar>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:gravity="center"
            android:layout_weight="0.22"
            android:id="@+id/linearLayout3"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                app:srcCompat="@android:drawable/btn_star"
                android:id="@+id/like"
                android:gravity="center"
                android:tint="@android:color/black"
                android:layout_weight="0.06" />

            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                app:srcCompat="@android:drawable/ic_media_play"
                android:id="@+id/playpause"
                android:gravity="center"
                android:layout_weight="0.04"
                android:layout_marginLeft="6dp"
                android:tint="@android:color/black"
                android:clickable="true"
                android:tag="play"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                app:srcCompat="@android:drawable/ic_media_next"
                android:id="@+id/skip"
                android:tint="@android:color/black"
                android:layout_weight="0.07"
                android:layout_marginLeft="2dp"/>

        </LinearLayout>

        <ProgressBar
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="324dp"
            android:layout_height="26dp"
            android:id="@+id/songProgress"
            android:paddingTop="10dp"
            android:progressTint="@android:color/holo_orange_dark"
            android:layout_gravity="center"
            android:layout_weight="0.06"
            android:layout_above="@+id/linearLayout3"
            android:layout_centerHorizontal="true" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:weightSum="1"
            android:layout_above="@+id/songProgress"
            android:layout_alignParentStart="true">

            <!--Speed placeholders-->
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="107dp"
                android:layout_height="match_parent"
                android:layout_weight="0.96">

                <TextView
                    android:text="Target Speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:text="0.0 Km/h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:fontFamily="sans-serif-thin"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="186dp"
                android:layout_height="match_parent">

                <TextView
                    android:text="Current Speed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:fontFamily="sans-serif-thin"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"/>

                <TextView
                    android:text="0.0 Km/h"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:fontFamily="sans-serif-thin"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</com.sothree.slidinguppanel.SlidingUpPanelLayout>